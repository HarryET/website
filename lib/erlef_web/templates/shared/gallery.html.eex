<%= for list <- Enum.chunk_every(@members, 4) do %>
<div class="d-md-flex">
  <%= for %{name: name, avatar_url: image} <- list do %>
    <% src_url = image || "volunteers/profile-placeholder.png" %>
  <div class="pr-2 mb-2">
    <div class="avatar-large rounded">
      <img class="img-fluid" src="/images/<%= src_url %>" alt="<%= name %>">
    </div>
    <%= name %>
  </div>
  <% end %>
</div>
<% end %>

