    <%= if Erlef.is_env?(:prod) do %>
      <script async defer data-domain="erlef.org" src="https://stats.erlef.org/js/index.js"></script>
    <% end %>
  </head>

  <body>
    <%= render "header.html", assigns %>
        <%= if flash = get_flash(@conn, :info) do %>
          <div class="alert alert-info" role="alert">
            <%= raw flash %>
          </div>
      <% end %>

        <%= if flash = get_flash(@conn, :notice) do %>
          <div class="alert" role="alert">
            <%= raw flash %>
          </div>
      <% end %>

      <%= if flash = get_flash(@conn, :error) do %>
        <div class="alert alert-danger" role="alert">
          <%= raw flash %>
        </div>
      <% end %>

      <%= if flash = get_flash(@conn, :success) do %>
        <div class="alert alert-success" role="alert">
          <%= raw flash %>
        </div>
      <% end %>
      <%= unless @conn.request_path == "/" do %>
        <div class="mt-3">
        </div>
      <% end %>
        <%= Map.get(assigns, :inner_layout) || @inner_content %>
    <%= render "footer.html", assigns %>
    <svg height="0" width="0" viewBox="0 0 864 563">
      <defs>
      <clipPath id="myClip" transform="scale(0.001157407407 0.001776198934)" clipPathUnits="objectBoundingBox">
      <path d="M80.14 0h775.738a8 8 0 017.931 9.044l-72.017 547a8 8 0 01-7.931 6.956H8.122a8 8 0 01-7.931-9.044l72.017-547A8 8 0 0180.139 0z" />
      </clipPath>
      </defs>
    </svg>

  </body>
</html>
